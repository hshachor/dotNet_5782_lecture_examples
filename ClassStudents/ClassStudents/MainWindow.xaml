<Window x:Class="ClassStudents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassStudents"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="שם התלמיד" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <TextBlock Name="Name" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="תעודת זהות" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <TextBlock Name="ID" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="ציון" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <TextBlock Name="grade" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Click="Button_Click">
              פתח רשימת תלמידים
        </Button>

    </StackPanel>
</Window>
