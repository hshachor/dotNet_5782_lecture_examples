<Window x:Class="WpfAccount.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAccount"
        mc:Ignorable="d"
        Title="MainWindow">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="current balance"/>
            <TextBlock x:Name="txtBalance"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="change amount"/>
            <TextBox x:Name="txtAmount"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Deposit" Name="btnDeposit" Click="btnDeposit_Click"/>
            <Button Content="Withdraw" Name="btnWithdraw"/>
            <Button Content="Exit" Name="btnExit"/>
        </StackPanel>


    </StackPanel>
</Window>
